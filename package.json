{
  "name": "realtime-music-jam",
  "version": "1.0.0",
  "description": "A music streaming app where people can listen to music simultaneously in real-time",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev src/server.ts",
    "build": "npm run clean && tsc",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "postinstall": "npm run build"
